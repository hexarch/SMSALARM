<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS Alarm Uygulaması"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS Başlığı:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSmsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Örn: PTT"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj içeriği:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etErrorCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Örn: Gönderiniz dağıtıma çıkmıştır"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSelectAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Sesi Seç"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvSelectedAudioPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Henüz ses dosyası seçilmedi"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ayarları Kaydet"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnStopAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çalan Alarmı Durdur"
        android:background="#F44336"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not: Bu uygulama, belirlediğiniz SMS başlığındaki mesajlarda belirli hata kodlarını algılayarak alarm çalar."
        android:textStyle="italic"
        android:layout_marginTop="32dp"/>

</LinearLayout>